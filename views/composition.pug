doctype html
html
  head
    title Color Composer

    meta(name='viewport', content='width=device-width, user-scalable=no')
    meta(property='og:title', content='My Synesthetic Masterpiece')
    meta(property='og:description', content='Color Composer from the Nelson-Atkins Museum of Art.')
    meta(property='og:type', content='video.other')
    meta(property='og:image', content= s3Path + '/' + uuid + '.jpg')
    meta(property='og:url', content= rootUrl + '/t/' + uuid)

    link(rel='stylesheet', href='/main.css')

  body

    h1#logo

    video(width='100%' poster= s3Path + '/' + uuid + '.jpg' controls)
      source(src= s3Path + '/' + uuid + '.mp4')
      source(src= s3Path + '/' + uuid + '.webm')

    .shares
      a.share#twitter(href=`http://twitter.com/share?text=#BlochGalleriesKC&url=${rootUrl}/t/${uuid}`) Twitter
      a.share#facebook(href=`http://www.facebook.com/share.php?u=${rootUrl}/t/${uuid}&amp;title=#BlochGalleriesKC`) Facebook
